# Misc
set -o vi
bindkey -v
bindkey '^a' autosuggest-accept

# Startup
source @zsh_syntax_highlighting@/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
zmodload -a autocomplete
zmodload -a complist
eval $(starship init zsh)
clear
